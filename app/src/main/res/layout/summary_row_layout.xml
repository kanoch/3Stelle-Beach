<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/black_corners"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewLettino"
        android:layout_width="93dp"
        android:layout_height="101dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
         />

    <LinearLayout
        android:layout_width="268dp"
        android:layout_height="109dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNumeroLettino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="Numero del lettino"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewDataPrenotazione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="Data della prenotazione"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPrezzo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Prezzo"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageViewCestino"
                android:layout_width="43dp"
                android:layout_height="51dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="120dp"
                android:src="@drawable/baseline_delete_24" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
