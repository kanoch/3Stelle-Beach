<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOrder"
        android:layout_width="408dp"
        android:layout_height="459dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.297" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="234dp"
        android:layout_height="80dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Riepilogo Prenotazione"
        android:textAlignment="center"
        android:textColor="#9E000000"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewOrder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="59dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/buttonCheckout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewOrder">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="213dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_medium"
            android:text="Totale:"
            android:textColor="#CF1010"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalTextView"
            android:layout_width="185dp"
            android:layout_height="59dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="103dp"
            android:text="TextView"
            android:textColor="#190A0A"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonCheckout"
        android:layout_width="247dp"
        android:layout_height="57dp"
        android:background="@drawable/button_background_rounded"
        android:text="Conferma Prenotazione"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewOrder"
        app:layout_constraintVertical_bias="0.88" />

    <ImageButton
        android:id="@+id/btnPreviousPage"
        android:layout_width="56dp"
        android:layout_height="59dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewOrder"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727"
        app:srcCompat="?attr/actionModeCloseDrawable" />
</androidx.constraintlayout.widget.ConstraintLayout>